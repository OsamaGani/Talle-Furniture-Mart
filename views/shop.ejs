<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OUR SHOP</title>
    <!-- own css main file link-->
    <link rel="stylesheet" href="css/shop.css" />
    <!-- own css navbar file -->
    <link rel="stylesheet" href="css/navbar.css" />
    <!-- own colour css file -->
    <link rel="stylesheet" href="css/colour.css" />
    <!-- fontawesome css file -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
    />
    <!-- google font poppin's link -->
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,500;1,600;1,700;1,800&family=Poppins:ital,wght@0,300;0,400;0,500;0,700;0,800;0,900;1,500;1,600;1,700;1,800&display=swap"
      rel="stylesheet"
    />
    <!-- favicon link -->
    <link rel="icon" type="image/x-icon" href="images/favicon.png" />
  </head>

  <body>
    <!-- header starts here -->
    <%- include("common/header") %>

    <!-- home section starts here -->
    <section id="home">
      <div class="content">
        <h1>OUR SHOP</h1>
        <div class="link"><a href="/">Home</a> / <span>shop</span></div>
      </div>
    </section>

    <!-- latest products starts here -->
    <section id="products">
      <h1>LATEST PRODUCTS</h1>
      <div class="container">

        <% if(products.length == 0){ %>
            <h1 class="heading1">No Product Available</h1>
          <% }else{ %>
        <% for(i=0;i<products.length;i++){ %>

          <div class="card">

            <div class="img">
              <img src="./product-image/<%= products[i].image %>" alt="">
              <span>â‚¹<i style="font-variant: normal;" class="price"><%= products[i].price %></i></span>
            </div>
            <input type="hidden" class="product-id" value="<%= products[i]._id %>">
            <p class="title"><%= products[i].name %></p>
            <input type="number" min="1" value="1" class="quantity" />
            <button type="button" class="btn add-to-cart-btn">Add to Cart</button>

          </div>

          <% } %>
          <% } %>

        </div>
     
    </section>
    <!-- footer starts here -->
   <%- include('common/footer') %>

    <!-- copyright starts here -->
    

    <!-- own js file link  -->


    <script src="js/script.js"></script>
