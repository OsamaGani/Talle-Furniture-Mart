<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CONTACT US</title>
    <!-- own css main file link -->
    <link rel="stylesheet" href="css/contact.css">
       <!-- own css navbar file -->
       <link rel="stylesheet" href="css/navbar.css">
       <!-- own colour css file -->
       <link rel="stylesheet" href="css/colour.css">
       <link rel="stylesheet" href="css/about.css">
       <!-- fontawesome css file -->
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
       <!-- google font poppin's link -->
       <link
           href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,500;1,600;1,700;1,800&family=Poppins:ital,wght@0,300;0,400;0,500;0,700;0,800;0,900;1,500;1,600;1,700;1,800&display=swap"
           rel="stylesheet">
       <!-- favicon link -->
       <link rel="icon" type="image/x-icon" href="images/favicon.png">
</head>
<body>
     <!-- header starts here -->
     <%- include("common/header") %>

    <!-- home section starts here -->
    <section id="home">
        <div class="content">
            <h1>CONTACT US</h1>
            <div class="link">
                <a href="/">Home</a> / <span>contact</span>
            </div>
        </div>
    </section>

    <!-- contact section starts here -->
    <section id="contact">
        <form action="/contactdata" method="post">
            <h1 class=heading>SAY SOMETHING!</h1>
            <input type="text" placeholder="Enter Your Name" name="name" minlength="3" maxlength="20" required>
            <input type="email" placeholder="Enter Your Email" name="email"required>
            <input type="number" placeholder="Enter Your Number" name="number"  maxlength="12" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);">
            <textarea  id="" name="message" placeholder="Enter Your Message"  minlength="3" required></textarea>
            <button class="btn" type="submit">Send Message</button>
        </form>
    </section>

      <!-- footer starts here -->
      <%- include("common/footer") %>
    
    <!-- copyright starts here -->
   
    
    <!-- own js file link  -->
    <script src="js/script.js"></script>
</body>
</html>