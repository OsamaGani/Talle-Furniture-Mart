      <form action="/orderdata" class="form" method="post">
        <h1 class="heading">PLACE YOUR ORDER</h1>
        <div class="row">
          <div class="col col-1">
            <div class="name">
              <label for="name">Your Name:</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                minlength="3"
                maxlength="20"
                placeholder="Enter Your Name"
              />
            </div>
            <div class="email">
              <label for="email">Your Email:</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="Enter Your Email"
              />
            </div>
            <div class="address-1">
              <label for="address-1" minlength="5">address line 01:</label>
              <input
                type="text"
                id="address-1"
                name="address"
                required
                placeholder="e.g. flat no."
              />
            </div>
            <div class="city">
              <label for="city">City:</label>
              <input
                type="text"
                id="city"
                name="city"
                required
                placeholder="e.g. mumbai"
              />
            </div>
            <div class="email">
              <label for="country">Country:</label>
              <input
                type="text"
                id="country"
                name="country"
                required
                placeholder="e.g. india"
              />
            </div>
          </div>
          <div class="col col-2">
            <div class="number">
              <label for="number">Your Number:</label>
              <input type="number" id="number" name="number"required
              maxlength="12" placeholder="Enter Your Number"
              oninput="javascript: if (this.value.length > this.maxLength)
              this.value = this.value.slice(0, this.maxLength);"">
            </div>
            <div class="payment">
              <label for="payment">Payment Method:</label>
              <select name="" id="payment">
                <option value="cash on delivery"> Only cash on delivery</option>
              </select>
            </div>
            <div class="address-2">
              <label for="address-2" minlength="5">address line 01:</label>
              <input
                type="text"
                id="address-2"
                name="address2"
                required
                placeholder="e.g. flat no."
              />
            </div>
            <div class="city">
              <label for="state">State:</label>
              <input
                type="text"
                id="state"
                name="state"
                required
                placeholder="e.g. maharashtra"
              />
            </div>
            <div class="email">
              <label for="pin">Pin Code:</label>
              <input
                type="text"
                id="pin"
                name="pin"
                required
                placeholder="e.g. 123456"
              />
            </div>
          </div>
        </div>
        <div class="submit">
          <button type="submit" class="btn">Order Now</button>
        </div>
      </form>
