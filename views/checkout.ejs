      <div class="content">
        <h1>CHECKOUT</h1>
        <div class="link"><a href="/">Home</a> / <span>checkout</span></div>
      </div>
    </section>

    <!-- details section starts here -->
    <section id="details">
      <div class="container">
      </div>
      <div class="content">
        <div class="total">
          <p>grand total :<span class="grand-total">â‚¹0/-</span></p>
